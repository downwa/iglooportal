#!/bin/bash

IPTABLES=/sbin/iptables
ARP=/usr/sbin/arp
USERS=/var/lib/iglooportal/users.txt
QUOTA=104857600 # 100 Mb

source /etc/iglooportal

mac=$1
[ "$mac" = "" ] && echo "Missing MAC address" 1>&2 && exit 1
user=$2

# Extract IP address from arp table (if any)
arpip() {
	mac=$1
	$ARP -an | grep -v "<incomplete>" | grep -i ".*at $mac " | sed -e 's/.*(\([0-9][0-9]*\.[0-9][0-9]*\.[0-9][0-9]*\.[0-9][0-9]*\)).*at.*/\1/g' | head -n 1
}

ip=$(arpip "$mac") # May have no IP address if not logged in.  That's okay, we can still de-authorize based on MAC
date +"%D %T: logoutmac"
[ "$ip" != "" ] && /usr/bin/rmtrack "$ip"

while [ true ]; do
	$IPTABLES -n -t nat -L auth | grep -qi "MAC.*$mac.*USER:$user \*\/$" || { echo "MAC address $mac is not authorized."; break; }

	echo $IPTABLES -t nat -D auth -m mac --mac-source $mac -j serv -m comment --comment "USER:$user" #--quota $QUOTA
	$IPTABLES -t nat -D auth -m mac --mac-source $mac -j serv -m comment --comment "USER:$user" #--quota $QUOTA
done

grep -vi ",$mac," "$USERS" >"$USERS.$$"
mv "$USERS.$$" "$USERS"

ssh www-data@$AUTHSRVR logoutwebuser "$user"
